<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    tools:context=".activity.HomeActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_alignBaseline="@id/linearlayoutlogo"
            android:layout_alignTop="@id/linearlayoutlogo"
            android:layout_alignBottom="@id/linearlayoutlogo"
            android:gravity="center_vertical"
            android:text="Hi,"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tvusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_alignBaseline="@id/linearlayoutlogo"
            android:layout_alignTop="@id/linearlayoutlogo"
            android:layout_alignBottom="@id/linearlayoutlogo"
            android:gravity="center_vertical"
            android:text="username"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <LinearLayout
            android:id="@+id/linearlayoutlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgnotif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/notif" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/profileorang"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvsemogaharimumenyenangkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvusername"
            android:layout_marginTop="9dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:text="@string/semoga"
            android:textSize="16dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:id="@+id/linearLayoutMaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tvsemogaharimumenyenangkan"
            android:onClick="@+id/btnlokasi">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/markerhome"
                android:layout_below="@id/tvsemogaharimumenyenangkan"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/tvlokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvsemogaharimumenyenangkan"
                android:layout_alignParentStart="true"
                android:text="Lokasi Saya"
                android:textColor="@color/white"
                android:layout_marginStart="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutkartu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_below="@id/linearLayoutMaps"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
        
        <ImageButton
            android:id="@+id/btninfo"
            android:layout_width="166dp"
            android:layout_height="196dp"
            android:background="@drawable/img_1"
            android:layout_below="@id/linearLayoutMaps"
            android:layout_marginEnd="35dp"/>
        
        <ImageButton
            android:id="@+id/btnrencana"
            android:layout_width="166dp"
            android:layout_height="196dp"
            android:background="@drawable/img_2"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/imgkolomabsen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayoutkartu"
            android:background="@drawable/kolom_absen" />

        <LinearLayout
            android:id="@+id/linearLayoutabsen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/linearLayoutkartu"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivabsensekarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/absen_sekarang"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btnabsen"
                android:layout_margin="20dp"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_absen_harian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_absen_harian"
            android:layout_below="@id/imgkolomabsen"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:foregroundGravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/imgkolomabsen"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:gravity="center_horizontal">

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/lihat_absensi_harian"
               android:layout_marginTop="30dp"
               android:layout_marginEnd="50dp"/>
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_play"
            android:layout_below="@+id/linearLayoutabsen"
            android:layout_marginTop="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="60dp"/>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>