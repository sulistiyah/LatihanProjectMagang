<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_layer"
    tools:context=".activity.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_back_top"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Daftar"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etKodePerusahaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_insert_register"
                android:hint="Kode Perusahaan"
                android:paddingStart="20dp" />

            <EditText
                android:id="@+id/etIdKaryawan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_insert_register"
                android:hint="ID Karyawan*"
                android:paddingStart="20dp" />

            <EditText
                android:id="@+id/etNamaLengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_insert_register"
                android:hint="Nama Lengkap*"
                android:paddingStart="20dp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_insert_register"
                android:hint="Email*"
                android:paddingStart="20dp" />

            <EditText
                android:id="@+id/etJobDeskDepartemen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_insert_register"
                android:hint="Job Desk / Departemen*"
                android:paddingStart="20dp" />

            <EditText
                android:id="@+id/etNomorTelepon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_insert_register"
                android:hint="Nomor Telepon / Phone*"
                android:paddingStart="20dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/line_register_activity" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativepassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/tv_masukanPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Masukan Password"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_masukanPassword"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_insert_register"
                android:hint="Masukan Kata Sandi*"
                android:paddingStart="20dp" />

            <ImageView
                android:id="@+id/img_showpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_masukanPassword"
                android:layout_alignEnd="@+id/tv_masukanPassword"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_show_password" />

            <EditText
                android:id="@+id/etKonfirmasiPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etPassword"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_insert_register"
                android:hint="Konfirmasi Kata Sandi*"
                android:paddingStart="20dp" />

            <ImageView
                android:id="@+id/img_showpass_konfirmasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etPassword"
                android:layout_alignEnd="@+id/etPassword"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_show_password" />

            <ImageView
                android:id="@+id/btn_daftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etKonfirmasiPassword"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_daftar"
                android:visibility="visible" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>