<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    tools:context=".activity.LoginActivity">

    <View
        android:id="@+id/Viewselamatdatang"
        android:layout_width="319dp"
        android:layout_height="74dp"
        android:background="@drawable/selamatdatang"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="48dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"/>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="301.87dp"
        android:layout_height="217.45dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="56.56dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="162dp"
        android:background="@drawable/gambarlogin1"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="374dp"
        android:layout_height="63dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="429dp"
        android:background="@drawable/kolom"
        android:hint="Email / ID karyawan"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp" />

    <EditText
        android:id="@+id/etPass"
        android:layout_width="374dp"
        android:layout_height="63dp"
        android:paddingStart="20dp"
        android:hint="Masukan Kata Sandi"
        android:inputType="textPassword"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="512dp"
        android:background="@drawable/kolom"/>

    <ImageView
        android:id="@+id/imgeye"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="525dp"
        android:layout_marginLeft="345dp"
        android:background="@drawable/eyefill"/>


    <View
        android:id="@+id/btnmasuk"
        android:layout_width="374dp"
        android:layout_height="63dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="617dp"
        android:background="@drawable/img"
        android:onClick="@id/btnmasuk" />

    <TextView
        android:id="@+id/lupa_kata_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnmasuk"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="684dp"
        android:gravity="center"
        android:lineSpacingExtra="-4sp"
        android:text="@string/lupa_kata_s"
        android:textAppearance="@style/lupa_kata_s"
        android:textColor="@color/white"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tvbelummempunyaiakun"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="790dp"
        android:gravity="top"
        android:lineSpacingExtra="-1sp"
        android:text="@string/belum_mempunyai_akun"
        android:textAppearance="@style/belum_mempunyai_akun"
        android:textSize="14dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tvdaftar"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="220dp"
        android:layout_marginTop="790dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="60dp"
        android:gravity="top"
        android:lineSpacingExtra="-1sp"
        android:text="@string/daftar_sekarang"
        android:textAppearance="@style/daftar_sekarang"
        android:textColor="@color/red"
        android:textSize="14dp"
        android:onClick="@+id/daftar"/>

</RelativeLayout>